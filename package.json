{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "Project template with React, Webpack",
  "main": "index.js",
  "scripts": {
    "test": "mocha './src/**/*.test.js' --compilers js:babel-core/register",
    "test:watch": "npm test -- --watch",
    "start": "webpack-dev-server --mode development --config webpack.config.dev.js --inline",
    "build": "webpack --mode production --config webpack.config.prod.js",
    "dev": "parallelshell 'npm run test:watch' 'npm start'",
    "lint": "eslint src"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^1.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "expect": "^23.6.0",
    "file-loader": "^2.0.0",
    "mocha": "^5.2.0",
    "parallelshell": "^3.0.2",
    "path": "^0.12.7",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "react": "^16.8.6"
  }
}
